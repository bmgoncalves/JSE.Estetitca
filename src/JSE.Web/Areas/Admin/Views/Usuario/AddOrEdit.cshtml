@model Usuario
@{
    ViewData["Title"] = "Cadastrar / Atualizar";
}

<div >
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cadastro de Usuário</h1>
        <hr />
    </div>

    <div class="col-md-4">
        <form asp-action="AddOrEdit" method="post">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmaSenha"></label>
                <input asp-for="ConfirmaSenha" class="form-control" />
                <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-block btn-lg" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-area="Admin" asp-controller="Usuario" asp-action="Index" class="btn btn-secondary btn-block btn-lg">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


