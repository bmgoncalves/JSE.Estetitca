@model JSE.Web.Areas.Admin.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-login200">
    <div class="wrap-login100">
        <div class="login100-pic js-tilt" data-tilt>
            <img src="~/images/img-02.png" alt="IMG" />
        </div>

        <form asp-area="Admin" asp-controller="Login" asp-action="Login" method="post" class="login100-form">
            <span class="login100-form-title">
                Acesso Restrito - Login
            </span>

            @if (ViewData["MSG_E"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Erro!</strong> @ViewData["MSG_E"]
                </div>
            }

            <div class="form-group wrap-input100">
                <input asp-for="LoginName" type="text" class="form-control" placeholder="Username" required="required">
            </div>
            <div class="form-group wrap-input100">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group container-login100-form-btn">
                <button type="submit" class="login100-form-btn">Entrar</button>
            </div>

            <div class="text-center p-t-12">
                <span class="txt1">Esqueci</span>
                <a class="txt2" asp-area="Admin" asp-controller="Login" asp-action="RecuperarSenha"> minhha senha</a>
            </div>

            <div class="text-center p-t-136">
            </div>

            
        </form>
    </div>
</div>
