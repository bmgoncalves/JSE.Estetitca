@model JSE.Web.Models.Estabelecimento

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cadastrar</h2>

<h4>Estabelecimento</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Estabelecimento" asp-action="AddOrEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="NomeFantasia" class="control-label"></label>
                    <input asp-for="NomeFantasia" class="form-control" />
                    <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <div class="checkbox">
                        <label asp-for="Ativo" class="control-label"><input asp-for="Ativo" checked /> @Html.DisplayNameFor(model => model.Ativo)</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="col-lg-2">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                <div class="col-md-1">
                    <label asp-for="UF" class="control-label"></label>
                    <input asp-for="UF" class="form-control" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>



                <div class="col-md-3">
                    <label asp-for="TelefoneComercial" class="control-label"></label>
                    <input asp-for="TelefoneComercial" class="form-control" />
                    <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="TelefoneCelular" class="control-label"></label>
                    <input asp-for="TelefoneCelular" class="form-control" />
                    <span asp-validation-for="TelefoneCelular" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Pais" class="control-label"></label>
                    <input asp-for="Pais" class="form-control" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>



                <div class="col-md-3">
                    <label asp-for="InscricaoEstadual" class="control-label"></label>
                    <input asp-for="InscricaoEstadual" class="form-control" />
                    <span asp-validation-for="InscricaoEstadual" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="InscricaoMunicipal" class="control-label"></label>
                    <input asp-for="InscricaoMunicipal" class="form-control" />
                    <span asp-validation-for="InscricaoMunicipal" class="text-danger"></span>
                </div>

            </div>

            <hr />
            <h3>Midias sociais</h3>

            <div class="row">
                <div class="col-md-4">
                    <label asp-for="UrlInstagram" class="control-label"></label>
                    <input asp-for="UrlInstagram" class="form-control" />
                    <span asp-validation-for="UrlInstagram" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="UrlFacebook" class="control-label"></label>
                    <input asp-for="UrlFacebook" class="form-control" />
                    <span asp-validation-for="UrlFacebook" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="UrlYoutube" class="control-label"></label>
                    <input asp-for="UrlYoutube" class="form-control" />
                    <span asp-validation-for="UrlYoutube" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label asp-for="Localizacao" class="control-label"></label>
                    <input asp-for="Localizacao" class="form-control" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <h3>Informações Institucionais</h3>

            <div class="row">

                <div class="col-md-6">
                    <label asp-for="TituloSobreNos" class="control-label"></label>
                    <input asp-for="TituloSobreNos" class="form-control" />
                    <span asp-validation-for="TituloSobreNos" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SubTituloSobreNos" class="control-label"></label>
                    <input asp-for="SubTituloSobreNos" class="form-control" />
                    <span asp-validation-for="SubTituloSobreNos" class="text-danger"></span>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="DescricaoSobreNos" class="control-label"></label>
                    <textarea rows="10" asp-for="DescricaoSobreNos" class="form-control"></textarea>
                    <span asp-validation-for="DescricaoSobreNos" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <h3>Fotos</h3>
            <div class="row">
                <div class="form-group col-md-3">
                    <label class="btn btn-primary" for="inputFiles">Adicionar foto </label>
                    <input class="input-file" id="inputFiles" type="file" name="files" accept="image/*" />
                    <span id="file-name"></span>
                </div>
                <div class="form-group col-md-3">
                    <a href="#" class="btn btn-secondary">Limpar Fotos</a>
                </div>
            </div>
            <hr />


            <div class="row">
                <div class="form-group col-md-3">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-block btn-lg" />
                </div>
                <div class="form-group col-md-3">
                    <a href="~/admin/estabelecimento" class="btn btn-secondary btn-block btn-lg">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>