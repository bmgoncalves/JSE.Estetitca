
<div class="modal fade" id="modalDepoimentoForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Deixe seu depoimento :)</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">

                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="nomeCliente">Nome</label>
                    <input type="text" id="nomeCliente" class="form-control validate">
                </div>

                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="telefone">Telefone (opcional)</label>
                    <input type="text" id="telefone" class="form-control validate">
                </div>

                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="email">E-mail (opcional)</label>
                    <input type="email" id="email" class="form-control validate">
                </div>

                <div class="md-form">
                    <label data-error="wrong" data-success="right" for="mensagem">Mensagem</label>
                    <textarea type="text" id="mensagem" class="md-textarea form-control" rows="4"></textarea>
                </div>

                <div>
                    <div>
                        <label class="lbl-upload" for='input-file'>
                            Adicionar foto
                        </label>
                        <input id='input-file' type='file' value='' onchange="readURL(this);" />
                        <span id='file-name'></span>
                        <img class="img-upload" id="blah" src="~/img/80x80.png" alt="Sua imagem" />
                    </div>
                </div>
            </div>
            <div class="md-form">
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-primary btn-block">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/uploadFile.js"></script>
