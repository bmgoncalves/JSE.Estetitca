<script type="text/javascript">

    var view = document.getElementById("inputView").value;
    var liAtiva;

    if (view == "Index") {
        var urlFull = window.location.toString();
        var fragmento = urlFull.indexOf("#");
        if (fragmento > -1) {
            liAtiva = urlFull.substring(fragmento + 1, urlFull.length);
        }
        else {
            liAtiva = view;
        }
    }
    else {
        liAtiva = view;
    }
    var itemLista = document.getElementById("li" + liAtiva);
    itemLista.classList.add("active");
</script>
