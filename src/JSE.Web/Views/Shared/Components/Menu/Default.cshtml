@model Estabelecimento

@{
    string urlSobreNos = "/home#about";
    string urlServicos = "/Home/Servicos";
    string urlGaleria = "/Home/Galerias";
    string urlDepoimentos = "/home#testimonials";
    string urlFaqs = "/home#faq";
    string urlContato = "/home#contact";
    string controllerAtivo = ViewContext.RouteData.Values["controller"].ToString(); //ViewContext.RouteData.Values["action"].ToString();
    string viewAtiva = ViewContext.RouteData.Values["action"].ToString();


    if (ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index")
    {
        urlSobreNos = "#about";
        urlServicos = "#services";
        urlGaleria = "#gallery";
        urlDepoimentos = "#testimonials";
        urlFaqs = "#faq";
        urlContato = "#contact";
    }


}
<div id="topbar" class="d-none d-lg-flex align-items-center fixed-top">
    <div class="container d-flex">

        <div class="contact-info mr-auto">
            <i class="icofont-envelope"></i> <a href="@Model.Email">@Model.Email</a>
            <i class="icofont-phone"></i> @Model.TelefoneCelular
            <i class="icofont-google-map"></i> @Model.Endereco  - @Model.Bairro / @Model.Cidade - @Model.UF
        </div>
        <div class="social-links">
            <a href="@Model.UrlFacebook" class="facebook"><i class="icofont-facebook"></i></a>
            <a href="@Model.UrlInstagram" class="instagram"><i class="icofont-instagram"></i></a>
        </div>
    </div>
</div>

<input name="name" value="@viewAtiva" id="inputView" hidden />

<header id="header" class="fixed-top">
    <div class="container d-flex align-items-center w-100">
        <nav class="nav-menu d-none d-lg-block">
            <ul>
                <li id="liIndex"><a href="\">Home</a></li>
                <li id="liabout"><a href="@urlSobreNos">Sobre nós</a></li>
                <li id="liServicos"><a href="@urlServicos">Serviços</a></li>
